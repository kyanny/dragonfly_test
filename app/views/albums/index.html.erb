<h1>Listing albums</h1>

<table>
  <tr>
    <th>Cover image</th>
    <th>Cover image name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= image_tag(album.cover_image.url) %></td>
    <td><%= image_tag(album.cover_image.thumb('128x128').url) %></td>
    <td><%= album.cover_image_name %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

